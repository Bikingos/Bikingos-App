<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:utils="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/stat_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="18dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    utils:cardCornerRadius="4dp"
    utils:cardBackgroundColor="#424242">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">

    <TextView
        android:id="@+id/txt_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_label"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/accent_red"
        android:layout_below="@+id/txt_time_label"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/txt_distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_time_label"
            android:layout_toEndOf="@+id/txt_time_label"
            android:layout_marginLeft="16dp"
            android:text="@string/distance_label"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/accent_red"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/txt_time_label"
            android:layout_below="@+id/txt_distance_label"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="KM"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>